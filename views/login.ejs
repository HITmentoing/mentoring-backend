<%-include("./partials/header")-%>
<head>
  <link rel="stylesheet" href="./styles/login.css" type="text/css" />
  <script
      src="https://code.jquery.com/jquery-3.7.1.js"
      integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
      crossorigin="anonymous"></script>
</head>
  <body class="flex justify-center items-center">
    <div class="form">
      
      <ul class="tab-group">
        <li class="tab active"><a href="#mentor">mentor</a></li>
        <li class="tab"><a href="#student">student</a></li>
        <li class="tab"><a href="#admin">admin</a></li>
      </ul>
      
      <div class="tab-content">
        <div id="mentor">   
          <h1>mentor signin</h1>
          
          <form action="/mentorLogin" method="post">
          
            <div class="field-wrap">
              <label>
                Employee id<span class="req">*</span>
              </label>
              <input type="text" name="mentorEmpoyeeId" autocomplete="off" />
            </div>

          <div class="field-wrap">
            <label>
              Name<span class="req">*</span>
            </label>
            <input type="text" name="MentorName" autocomplete="off"/>
          </div>
          
          <div class="field-wrap">
            <label>
              Password<span class="req">*</span>
            </label>
            <input type="password" name="mentorPassword" autocomplete="off"/>
          </div>
          
          <button type="submit" class="button button-block">Login</button>
          
          </form>

        </div>
  
      
        
        <div id="student">   
          <h1>student signin</h1>
          
          <form action="/studentLogin" method="post">
          
            <div class="field-wrap">
            <label>
              Student id<span class="req">*</span>
            </label>
            <input type="text" name="studentId" autocomplete="off"/>
          </div>
            
            <div class="field-wrap">
            <label>
              Name<span class="req">*</span>
            </label>
            <input type="text" name="studentName" required autocomplete="off"/>
          </div>
          
          <div class="field-wrap">
            <label>
              Password<span class="req">*</span>
            </label>
            <input type="password" name="studentPassword" autocomplete="off"/>
          </div>
          
          <!-- <p class="forgot"><a href="#">Forgot Password?</a></p> -->
          
          <button class="button button-block">Log In</button>
          
          </form>

        </div>

<div id="admin">   
          <h1>admin signin</h1>
          
          <form action="/AdminLogins" method="post">
          
            <div class="field-wrap">
              <label>
                Employee id<span class="req">*</span>
              </label>
              <input type="text" name="adminEmployeeId" autocomplete="off" />
            </div>

          <div class="field-wrap">
            <label>
              Name<span class="req">*</span>
            </label>
            <input type="text" name="adminName" required autocomplete="off"/>
          </div>
          
          <div class="field-wrap">
            <label>
              Password<span class="req">*</span>
            </label>
            <input type="password" name="adminPassword" autocomplete="off"/>
          </div>
          
          <button type="submit" class="button button-block">Login</button>
          
          </form>

        </div>
        
      </div><!-- tab-content -->
      
</div> <!-- /form -->

  </body>
  <script src="./js/login.js"></script>
</html>