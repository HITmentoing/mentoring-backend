<%-include("./partials/header")-%>
<body>

    <div class=" items-center justify-center bg-teal-600 ">
        <div class="flex items-center justify-center  ">
            <h1 class="text-4xl font-extrabold">Student Registration Form</h1>
        </div>
        <div  class="flex items-center justify-center  ">
            <form action="/mentor" method="post" id="addStudentFrom">
                <div class="mx-auto my-5 py-2 px-4 border-b">
